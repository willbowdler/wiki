{
  "compilerOptions": {
    "target": "ES2020", // Modern JS for Node.js
    "module": "ESNext", // ESM for Rspack
    "moduleResolution": "Bundler", // ESM-compatible resolution
    "outDir": "./dist", // Match Rspack output
    "rootDir": "./src", // Match Rspack entry
    "baseUrl": "src", // Base for aliases
    "esModuleInterop": true, // Handle CommonJS npm modules
    "strict": true, // Enforce type safety
    "skipLibCheck": true, // Skip node_modules checks
    "resolveJsonModule": true, // Allow JSON imports
    "sourceMap": true, // Match Rspack devtool
    "experimentalDecorators": true, // For potential TypeORM
    "emitDecoratorMetadata": true // For decorator metadata
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
